<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="./css/styles.css" rel="stylesheet"/>
    <script>
    var token = document
        .querySelector('meta[name = "csrf-token"]')
        .getAttribute("content");

        function updateTodo(id, completed) {
            fetch(`/todos/${id}`, {
                method: "put",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    _csrf: token,
                    completed: !completed
                })
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.reload();
                    }
                })
                .catch((err) => console.error(err));
        }
    async function deleteTodo(id) {
        const response = await fetch(`/todos/${id}`, {
            method: "delete",
            headers: {
                "Content-Type": "application/json"},
            body: JSON.stringify({
                "_csrf": token,// other data
            })
        })
        .then((res) => {
            if (res.ok) {
                console.log("Deleted successfully");
                window.location.reload();
            }
        })
        .catch((err) => console.error(err));
    }
</script>
</head>
<body>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <%- include('header.ejs') %>
            <form action="/todos" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
                <div class="flex gap-2 py-4">
                    <div class="flex-auto">
                        <input class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm" type="text" name="title" placeholder="What's next?" required />
                    </div>
                    <div class="flex-auto">
                        <input class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm leading-4" type="date" name="dueDate"  />
                    </div>
                    <div class="flex-none">
                        <button class="bg-green-600 text-white px-5 py-1.5 rounded font-medium mr-2" type="submit" >Add</button>
                    </div>
                </div>
            </form>
            <div>
                <%- include('todos.ejs', { "title": "Overdue", "id" : "count-overdue", "data": overdue }) %>
                <%- include('todos.ejs', { "title": "Due Today", "id" : "count-due-today" , "data": dueToday,}) %>
                <%- include('todos.ejs', { "title": "Due Later", "id" : "count-due-later", "data": dueLater,}) %>
                <%- include('todos.ejs', { "title": "Completed Items", "id": "count-completed-items", "data": completedItems,}) %>
            </div>
        </div>
    </div>
</body>
</html>